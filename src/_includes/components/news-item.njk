<article class="news-item">
    <h2 class="h3">
        <a rel="external" href="{{ newsItem.acf.link }}">{{ newsItem.title.rendered | safe }}</a>
    </h2>
    <div class="date">
        <time datetime="{{ newsItem.date | w3DateFilter }}" class="dt-published">{{ newsItem.date | dateFilter }}</time>
    </div>
    <div class="preview-content">
        {{ newsItem.excerpt.rendered | striptags | safe }}
    </div>
</article>
