<article class="news-item">
    <h2 class="h3">
        <a rel="external" href="{{ newsItem.href }}">{{ newsItem.title | safe }}</a>
    </h2>
    <div class="date">
        <time datetime="{{ newsItem.dateTime | w3DateFilter }}" class="dt-published">{{ newsItem.dateTime | dateFilter }}</time>
    </div>
    <div class="preview-content">
        {{ newsItem.excerpt | striptags | safe }}
    </div>
</article>
