<article class="news-item">
    <figure class="preview-media">
        {% include 'svg/placeholder.svg' %}
    </figure>
    <h2 class="h3">
        <a href="/views/{{ viewsItem.slug }}/">{{ viewsItem.title | safe }}</a>
    </h2>
    <div class="author">By {{ viewsItem.author | safe }}</div>
    <div class="date">
        <time datetime="{{ viewsItem.dateTime | w3DateFilter }}" class="dt-published">{{ viewsItem.dateTime | dateFilter }}</time>
    </div>
    <div class="preview-content">
        {{ viewsItem.excerpt | striptags | safe }}
    </div>
</article>
