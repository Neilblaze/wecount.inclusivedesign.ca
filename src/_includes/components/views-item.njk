<article class="news-item">
    <figure class="preview-media">
        {% include 'svg/placeholder.svg' %}
    </figure>
    <h2 class="h3">
        <a href="/views/{{ viewsItem.slug }}/">{{ viewsItem.title.rendered | safe }}</a>
    </h2>
    <div class="author">By {{ viewsItem._embedded.author[0].name }}</div>
    <div class="date">
        <time datetime="{{ viewsItem.date | w3DateFilter }}" class="dt-published">{{ viewsItem.date | dateFilter }}</time>
    </div>
    <div class="preview-content">
        {{ viewsItem.excerpt.rendered | striptags | safe }}
    </div>
</article>
